{
    "name": "xedi/laravel-behat",
    "description": "Laravel Extension for Behat",
    "keywords": ["laravel", "behat", "extension", "bdd"],
    "type": "behat-extension",
    "autoload": {
        "psr-4": {
            "Xedi\\Behat\\": "src"
        }
    },
    "require": {
        "php": ">=5.4",
        "behat/behat": "~3.0",
        "behat/mink": "~1.7",
        "behat/mink-browserkit-driver": "~1.2"
    },
    "require-dev": {
        "symfony/symfony": "~2.6",
        "behat/mink-extension": "~2.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Smith",
            "email": "chris@xedi.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Xedi\\Behat\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable"
}
