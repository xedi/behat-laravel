{
    "name": "xedi/behat-laravel",
    "description": "Laravel Extension for Behat",
    "keywords": ["laravel", "behat", "extension", "bdd"],
    "type": "behat-extension",
    "autoload": {
        "psr-4": {
            "Xedi\\Behat\\Laravel\\": "src"
        }
    },
    "require": {
        "php": ">=5.4",
        "behat/behat": "~3.0",
        "phpspec/phpspec": "~2.1",
        // "symfony/symfony": "~2.6",
        "league/flysystem": "~1.0",
        "behat/mink-extension": "~2.0",
        "behat/mink-browserkit-driver": "~1.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Smith",
            "email": "chris@xedi.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Xedi\\Behat\\Laravel\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable"
}
